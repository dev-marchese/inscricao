@model Inscricao.Dto.Aluno
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<link href="~/css/register/index.min.css" asp-append-version="true" rel="stylesheet" />


<div class="offset-3 col-6">
    <h3>Cadastro de Aluno</h3>
    <hr />
    <form v-on:submit.prevent="addAluno">

        @Html.AntiForgeryToken()

        <input id="alunoid" type="hidden" v-model="aluno.alunoid" />

        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" id="nome" v-model="aluno.nome" maxlength="100" required class="form-control" />
        </div>

        <div class="form-group mt-3">
            <label for="email">Email</label>
            <input type="email" id="email" v-model="aluno.email" required class="form-control" />
        </div>

        <div class="form-group mt-3">
            <label for="cpf">CPF</label>
            <input type="text" id="cpf" v-model="aluno.cpf" maxlength="14" required class="form-control cpf" />
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="button" v-on:click="cancelar" class="btn btn-secondary">Voltar</button>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
</div>

@section Scripts {

    <script src="~/js/global/jquery.mask.min.js"></script>
    <script>
        const dataView = @Json.Serialize(Model)
    </script>
    <script src="~/js/aluno/index.js" asp-append-version="true" type="module"></script>
}
